{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "cluster_name": {
            "defaultValue": "[concat('kusto', uniqueString(resourceGroup().id))]",
            "type": "string",
            "metadata": {
                "description": "Name of the cluster to create"
              }
        },
        "location": {
            "type": "string",
            "defaultValue": "[resourceGroup().location]",
            "metadata": {
              "description": "Location for all resources."
            }
          },
		"skuName": {
            "allowedValues": [
                "Dev(No SLA)_Standard_D11_v2",
                "Standard_D11_v2",
                "Standard_D12_v2",
                "Standard_D13_v2",
                "Standard_D14_v2",
                "Standard_L4s",
                "Standard_L8s",
                "Standard_L16s",
                "Standard_L8s_v2",
                "Standard_L16s_v2",
                "Standard_DS13_v2+1TB_PS",
                "Standard_DS13_v2+2TB_PS",
                "Standard_DS14_v2+3TB_PS",
                "Standard_DS14_v2+4TB_PS"
            ],
            "type": "string",
            "metadata": {
                "description": "The sku name."
            }
        },
        "tier": {
            "allowedValues": [
                "Standard",
                "Basic"
            ],
            "type": "string",
            "metadata": {
                "description": "Specifies the tier of the Azure Data Explorer Cluster."
            }
        }
    },
    "variables": {},
    "resources": [
        {
            "type": "Microsoft.Kusto/clusters",
            "apiVersion": "2019-09-07",
            "name": "[parameters('cluster_name')]",
            "location": "[parameters('location')]",
            "sku": {
                "name": "[parameters('skuName')]",
                "tier": "[parameters('tier')]"
            },
            "properties": {
                "trustedExternalTenants": [],
                "enableDiskEncryption": false,
                "enableStreamingIngest": false
            }
        },
        {
            "type": "Microsoft.Kusto/clusters/databases",
            "apiVersion": "2019-05-15",
            "name": "[concat(parameters('cluster_name'), '/', parameters('cluster_name'))]",
            "location": "[parameters('location')]",
            "dependsOn": [
                "[resourceId('Microsoft.Kusto/Clusters', parameters('cluster_name'))]"
            ],
            "kind": "ReadWrite",
            "properties": {
                "softDeletePeriod": "P3650D",
                "hotCachePeriod": "P31D"
            }
        }
    ]
}